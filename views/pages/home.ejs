</head>
<body>
<header>
    <div class="home-menu">
        <ul class="menu-list">
            <li class="menu-item"><a href="/"> Home </a></li>
            <li class="menu-item"><a href="CreatePostPage"> Create New Post</a></li>
            <li class="menu-item"><a href="confirmDeleteAllPage"> Delete All Posts</a></li>
            <li class="menu-item"><a href="admin/"> Go to static blog </a></li>
        </ul>
    </div>
    <div id="h1" class="h1-div">
         <h1> Welcome to my space blog!</h1>
    </div>
</header>
    <div class="pading-top">
        <p></p>
    </div>  
    <div class="background-image">
    <div class="main">
        <div class="column-articles">
        <% posts.forEach(post => { %>
            <article id="article-<%= post.id %>">
                <div id="<%='post-padding-'+ post.id %>" class="article-padding"></div>
                <h2><a href="post/<%= post.id %>"> <%= post.title %></a></h2>
                <p  title="Exact time of posting: <%= post.date %>" class="date">Posted on <%= `${post.date.getUTCDate()} ` + `${post.date.getUTCMonth()+1}` + ` ${post.date.getUTCFullYear()}`%></p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= post.content %></p>
            <div class="links">                
                <a href="/post/edit/<%= post.id %>">Edit Post</a>
                <a href="/post/delete/<%= post.id %>">Delete Post</a>
                <a id="back-up-btn" class="go-back-up post-btn"> Go back up</a>
            </div>
            </article>
            <% })
            %>
        </div>
        <div class="column-links">
            <ul class="table-of-articles">
            <h3>Links to Articles</h3>
                <% posts.forEach(post => { %>
                <li><a id="<%= post.id %>" class="scroll-to-post"><%= post.title %></a></li>
                <% }); 
                 %>
            </ul>
            <ul class="links-to-other">
            <h3 title="These are purely decorative">Links to other Blogs and interesting resources</h3>
